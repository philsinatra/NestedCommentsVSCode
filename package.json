{
	"name": "nested-comments",
	"displayName": "Nested Comments",
	"description": "This is a VSCode extension for toggling nested comments.",
	"version": "4.1.2",
	"author": {
		"email": "code@philsinatra.com",
		"name": "Phil Sinatra",
		"url": "http://philsinatra.com"
	},
	"publisher": "philsinatra",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/philsinatra/NestedCommentsVSCode"
	},
	"bugs": {
		"url": "https://github.com/philsinatra/NestedCommentsVSCode/issues"
	},
	"homepage": "http://philsinatra.com/html-nested-comments.html",
	"engines": {
		"vscode": "^1.64.0"
	},
	"categories": [
		"Formatters",
		"Other"
	],
	"galleryBanner": {
		"color": "#6868ac",
		"theme": "dark"
	},
	"keywords": [
		"comment",
		"html",
		"css",
		"multi-root ready",
		"web development",
		"scss",
		"stylus",
		"format"
	],
	"icon": "images/icon.png",
	"screenshots": [
		{
			"path": "images/nest-html.gif"
		},
		{
			"path": "images/nest-css.gif"
		},
		{
			"path": "images/nest-jsx.gif"
		}
	],
	"activationEvents": [
		"onCommand:extension.nestComments"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.nestComments",
				"title": "Nest Comments"
			}
		],
		"configuration": {
			"type": "object",
			"title": "NestedComments",
			"properties": {
				"nestedComments.notSupportCommand": {
					"type": "boolean",
					"default": false,
					"description": "Does not support executing system comments."
				}
			}
		},
		"keybindings": [
			{
				"command": "extension.nestComments",
				"key": "ctrl+alt+/",
				"mac": "cmd+alt+/",
				"when": "editorTextFocus && editorHasSelection"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.64.0",
		"@typescript-eslint/eslint-plugin": "^5.9.1",
		"@typescript-eslint/parser": "^5.9.1",
		"@vscode/test-electron": "^2.0.3",
		"eslint": "^8.6.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"glob": "^7.2.0",
		"mocha": "^9.1.3",
		"prettier": "^3.6.2",
		"typescript": "^4.5.4"
	}
}
